<script>
    // style="margin-left: 8px;left: -320px !important;position: absolute;"

    let currentIndex = 0;
    const cardList = document.getElementById('slider-list');
    const cards = document.querySelectorAll('.slider-item');
    const cardWidth = cards[0].offsetWidth;
    console.log(cardWidth);

    let prevBtn = document.getElementById("prevBtn").style.display = "none";

    function handleNext() {
        console.warn("next", currentIndex);
        if (currentIndex < cards.length - 2) {
            console.log("enter");
            cards[currentIndex].style.display = "none"
            currentIndex++;
            let prevBtn = document.getElementById("prevBtn").style.display = "block";
            if (currentIndex == 5) {
                let nextBtn = document.getElementById("nextBtn").style.display = "none";
            }
        }
        console.log("Final Current Index : ", currentIndex);
    }
    function handlePrev() {
        console.warn("prev", currentIndex);
        if (currentIndex > 0) {
            console.log("enter prev");
            currentIndex--;
            if (currentIndex < 5) {
                let nextBtn = document.getElementById("nextBtn").style.display = "block";
            }
            if (currentIndex === 0) {
                let prevBtn = document.getElementById("prevBtn").style.display = "none";
            }
            cards[currentIndex].style.display = "block"
        }
        console.log("Final Current Index : ", currentIndex);
    }

</script>

