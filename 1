<body>
    <div class="container">
        <div class="slider-wrapper">
            <button type="button" id="prevBtn" class="slider-buttons" onclick="handlePrev()"><i
                    class='bx bx-chevron-left'></i></button>
            <div class="slider-list" id="slider-list" style="position: relative;">
                <img src="./images/1.jpg" alt="img-1" class="slider-item" id="1">
                <img src="./images/2.jpg" alt="img-2" class="slider-item" id="2">
                <img src="./images/3.jpg" alt="img-3" class="slider-item" id="3">
                <img src="./images/4.jpg" alt="img-4" class="slider-item" id="4">
                <img src="./images/5.jpg" alt="img-5" class="slider-item" id="5">
                <img src="./images/6.jpg" alt="img-6" class="slider-item" id="6">
                <img src="./images/7.jpg" alt="img-7" class="slider-item" id="7">
            </div>
            <button type="button" id="nextBtn" class="slider-buttons" onclick="handleNext()"><i
                    class='bx bx-chevron-right'></i></button>
        </div>
    </div>
